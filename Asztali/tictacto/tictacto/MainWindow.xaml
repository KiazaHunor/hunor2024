<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Tic-Tac-Toe gombok -->
        <Button x:Name="Btn0" Grid.Row="0" Grid.Column="0" FontSize="24" Click="ButtonClick"/>
        <Button x:Name="Btn1" Grid.Row="0" Grid.Column="1" FontSize="24" Click="ButtonClick"/>
        <Button x:Name="Btn2" Grid.Row="0" Grid.Column="2" FontSize="24" Click="ButtonClick"/>
        <Button x:Name="Btn3" Grid.Row="1" Grid.Column="0" FontSize="24" Click="ButtonClick"/>
        <Button x:Name="Btn4" Grid.Row="1" Grid.Column="1" FontSize="24" Click="ButtonClick"/>
        <Button x:Name="Btn5" Grid.Row="1" Grid.Column="2" FontSize="24" Click="ButtonClick"/>
        <Button x:Name="Btn6" Grid.Row="2" Grid.Column="0" FontSize="24" Click="ButtonClick"/>
        <Button x:Name="Btn7" Grid.Row="2" Grid.Column="1" FontSize="24" Click="ButtonClick"/>
        <Button x:Name="Btn8" Grid.Row="2" Grid.Column="2" FontSize="24" Click="ButtonClick"/>
    </Grid>
</Window>
