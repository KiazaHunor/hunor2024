<Window x:Class="LottoSorsolas.SorsolasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lottó Sorsolás" Height="200" Width="400">
    <Grid>
        <ComboBox x:Name="cmbLottoTypes" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Width="200">
            <ComboBoxItem Content="5-ös lottó" />
            <ComboBoxItem Content="6-os lottó" />
            <ComboBoxItem Content="Skandináv lottó" />
        </ComboBox>
        <Button Content="Sorsolás" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Click="BtnSorsolas_Click" />
    </Grid>
</Window>
